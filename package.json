{
  "name": "ryo620",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run server & npm run css:watch & npm run js:watch",
    "server": "npm run server:php & npm run server:browser-sync",
    "server:php": "php -S 0.0.0.0:8080 -t ./app/public/",
    "server:browser-sync": "browser-sync start --proxy \"0.0.0.0:8080\" --files \"./app/public/**/*.php, ./app/public/_assets/css/*.css, ./app/public/_assets/js/*.js\"",
    "css:watch": "chokidar './app/develop/css/' -c 'npm run css:build'",
    "css:build": "npm run css:sass & npm run css:prefix",
    "css:sass": "node-sass ./app/develop/css/*.scss -o ./app/public/_assets/css/ --output-style expanded",
    "css:prefix": "postcss --use autoprefixer --autoprefixer.browsers 'last 2 versions' ./app/public/_assets/css/bundle.css -d ./app/public/_assets/css/",
    "img:watch": "chokidar './app/develop/img/' -c 'npm run img:sprite'",
    "img:sprite": "spritesmith --rc ./config/.spritesmith.js",
    "js:watch": "chokidar './app/develop/js/' -c 'npm run js:build'",
    "js:build": "npm run js:webpack",
    "js:webpack": "webpack --config ./config/webpack.config.js",
    "hey": "echo 'hey!'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "brfs": "^1.4.3",
    "browser-sync": "^2.14.0",
    "chokidar-cli": "^1.2.0",
    "csscomb": "^3.1.7",
    "howler": "^2.0.1",
    "node-sass": "^3.8.0",
    "pixi-display": "^1.0.1",
    "pixi.js": "^4.3.0",
    "postcss-cli": "^2.5.2",
    "spritesmith-cli": "^1.1.2",
    "spritesmith-texturepacker": "^1.0.0",
    "transform-loader": "^0.2.3",
    "uglify-js": "^2.7.0",
    "webpack": "^1.13.3"
  }
}
